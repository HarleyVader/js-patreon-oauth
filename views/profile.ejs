<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Patreon Profile</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #121212;
      color: #e0e0e0;
      margin: 0;
      padding: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
    }
    .profile-container {
      background-color: #1e1e1e;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
      text-align: center;
      width: 90%;
      max-width: 800px;
    }
    .profile-container img {
      border-radius: 50%;
      width: 150px;
      height: 150px;
      margin-bottom: 20px;
    }
    .profile-container h1 {
      margin: 10px 0;
      color: #ff4081;
    }
    .profile-container p {
      margin: 5px 0;
    }
    .profile-section {
      margin-top: 20px;
      text-align: left;
    }
    .profile-section h2 {
      margin-bottom: 10px;
      color: #ff4081;
    }
    .profile-section ul {
      list-style-type: none;
      padding: 0;
    }
    .profile-section ul li {
      margin-bottom: 5px;
    }
    .profile-section ul li strong {
      color: #ff4081;
    }
    .profile-section ul li a {
      color: #ff4081;
      text-decoration: none;
    }
    .profile-section ul li a:hover {
      text-decoration: underline;
    }
    @media (max-width: 600px) {
      .profile-container {
        padding: 10px;
      }
      .profile-container img {
        width: 100px;
        height: 100px;
      }
    }
  </style>
</head>
<body>
  <div class="profile-container">
    <img src="<%= user.image_url %>" alt="Profile Picture">
    <h1>Hello, <%= user.full_name %>!</h1>
    <p>Email: <%= user.email %></p>
    <p>Vanity: <%= user.vanity %></p>
    <p>About: <%= user.about %></p>
    <p>Profile URL: <a href="<%= user.url %>"><%= user.url %></a></p>
    <p>Joined: <%= new Date(user.created).toLocaleDateString() %></p>

    <% if (memberships.length > 0) { %>
      <div class="profile-section">
        <h2>Memberships</h2>
        <% memberships.forEach(membership => { %>
          <ul>
            <% Object.keys(membership.attributes).forEach(key => { %>
              <li><strong><%= key.replace(/_/g, ' ') %>:</strong> <%= membership.attributes[key] %></li>
            <% }) %>
          </ul>
        <% }) %>
      </div>
    <% } %>

    <% if (addresses.length > 0) { %>
      <div class="profile-section">
        <h2>Addresses</h2>
        <% addresses.forEach(address => { %>
          <ul>
            <% Object.keys(address.attributes).forEach(key => { %>
              <li><strong><%= key.replace(/_/g, ' ') %>:</strong> <%= address.attributes[key] %></li>
            <% }) %>
          </ul>
        <% }) %>
      </div>
    <% } %>

    <% if (tiers.length > 0) { %>
      <div class="profile-section">
        <h2>Tiers</h2>
        <% tiers.forEach(tier => { %>
          <ul>
            <% Object.keys(tier.attributes).forEach(key => { %>
              <li><strong><%= key.replace(/_/g, ' ') %>:</strong> <%= key === 'description' ? unescape(tier.attributes[key]) : tier.attributes[key] %></li>
            <% }) %>
          </ul>
        <% }) %>
      </div>
    <% } %>
  </div>
</body>
</html>